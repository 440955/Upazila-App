<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/police_image"
                android:src="@drawable/policeman_icon"
                app:civ_border_color="@color/statusbar"
                app:civ_border_width="@dimen/_3sdp"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/police_name"
                    android:textColor="@color/statusbar"
                    android:textSize="@dimen/_16ssp"
                    android:text="নাম:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/police_number"
                    android:textColor="@color/statusbar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="নাম্বার"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/thana"
            android:text="থানা"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/statusbar"
            android:textSize="@dimen/_16ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/call_police"
            android:layout_margin="@dimen/_5sdp"
            android:backgroundTint="@color/statusbar"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:text="কল করুন"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>