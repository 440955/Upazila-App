<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Union_Porishod"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_union"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white"
        android:background="@color/statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_below="@+id/toolbar_union"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                >
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider_union"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:iss_corner_radius="5"
                    app:iss_auto_cycle="true"
                    app:iss_period="1000"
                    app:iss_delay="1000"
                    app:iss_text_align="CENTER"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                >
                <ImageView
                    android:src="@drawable/arrow_icon"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <TextView
                    android:id="@+id/tv_unionName"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="30"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="#26F8D2D2"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/village_people"
                    android:foreground="@drawable/clike_effect"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="@dimen/_92sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    >
                    <ImageView
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/people_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center|bottom"
                        android:text="গ্রাম ও জনসংখ্যা"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/village_police"
                    android:foreground="@drawable/clike_effect"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="@dimen/_92sdp"
                    android:layout_height="@dimen/_70sdp"
                    >
                    <ImageView
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/policeman_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center|bottom"
                        android:text="গ্রাম পুলিশ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/unionEmbulance"
                    android:foreground="@drawable/clike_effect"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="@dimen/_92sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    >
                    <ImageView
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/embulance_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center|bottom"
                        android:text="এমবুলেন্স"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:weightSum="30"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="#26F8D2D2"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/gramAdalot"
                    android:foreground="@drawable/clike_effect"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="@dimen/_92sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    >
                    <ImageView
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/adalot_icon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:padding="@dimen/_2sdp"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center|bottom"
                        android:text="গ্রাম আদালত"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="@drawable/clike_effect"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="@dimen/_92sdp"
                    android:layout_height="@dimen/_70sdp"
                    >

                    <TextView
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:text="আপডেট চলছে..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/bannerAd3"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6621199192974495/8025737479"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>