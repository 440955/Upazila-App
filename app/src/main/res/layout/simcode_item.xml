<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:foreground="@drawable/clike_effect"
        android:backgroundTint="@color/white"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/simCard_image"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="@color/statusbar"
                android:layout_centerVertical="true"
                android:src="@drawable/banglalink_icon"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>

            <TextView
                android:id="@+id/work"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/simCard_image"
                android:text="number"
                android:textColor="@color/statusbar"
                android:textSize="@dimen/_14ssp" />
            <TextView
                android:id="@+id/code"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@+id/work"
                android:text="*511#"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_toRightOf="@+id/simCard_image"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image_dial"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dial_icon"
                android:clickable="true"
                android:foreground="@drawable/clike_effect"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:tint="@color/statusbar" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>