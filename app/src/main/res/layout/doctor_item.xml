<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_image"
                app:civ_border_color="@color/statusbar"
                app:civ_border_width="@dimen/_3sdp"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/doctor_name"
                    android:textColor="@color/statusbar"
                    android:textSize="@dimen/_16ssp"
                    android:text="নাম:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/doctor_degree"
                    android:textColor="@color/statusbar"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="যোগ্যতা:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/expert_doctor"
            android:text="বিশেষজ্ঞঃ"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/statusbar"
            android:textSize="@dimen/_16ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:weightSum="30"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/doctor_message"
                android:layout_weight="10"
                android:layout_marginRight="@dimen/_5sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="মেসেজ"
                android:textSize="@dimen/_14ssp"
                android:backgroundTint="@color/statusbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/doctor_email"
                android:layout_weight="10"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:text="ই-মেইল"
                android:backgroundTint="@color/statusbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/doctor_phone"
                android:layout_weight="10"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white"
                android:text="ফোন"
                android:backgroundTint="@color/statusbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>